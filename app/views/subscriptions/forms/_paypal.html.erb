<%= form_with model: current_account,
  url: subscription_url,
  method: :post,
  data: {
    controller: "paypal",
    target: "paypal.form",
    paypal_env: braintree_env,
    paypal_client_token: Pay.braintree_gateway.client_token.generate
  } do |f| %>

  <div class="my-8 text-center">
    <%= tag.div nil, data: { target: "paypal.button" } %>
  </div>

  <%= f.hidden_field :plan, value: @plan.id %>
<% end %>
