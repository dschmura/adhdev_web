<% if user_masquerade? %>
  <div class="bg-orange-lightest text-orange-dark text-sm text-center font-bold px-4 py-3" role="alert">
    You're logged in as <b>User #<%= current_user.id %></b> (<%= current_user.email %>)</b>
    <%= link_to back_masquerade_path(current_user) do %>Logout<% end %>
  </div>
<% end %>

<header class="flex items-center justify-between flex-wrap bg-white border-b border-grey-lighter h-16 p-6">
  <%= link_to root_path, class: "flex items-center flex-no-shrink mr-6 text-black no-underline" do %>
    <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
    <span class="font-semibold text-xl tracking-tight">Jumpstart</span>
  <% end %>
  <div class="block lg:hidden">
    <button class="flex items-center px-3 py-2 border rounded text-grey-lighter border-grey-light hover:text-white hover:border-white">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
    <div class="text-sm lg:flex-grow">
      <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 font-semibold text-grey hover:text-grey-darker no-underline mr-4">
        Docs
      </a>
      <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 font-semibold text-grey hover:text-grey-darker no-underline mr-4">
        Examples
      </a>
      <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 font-semibold text-grey hover:text-grey-darker no-underline">
        Blog
      </a>
    </div>
    <div>
      <% if user_signed_in? %>
        <%= link_to "#", class: "no-underline" do %>
          <%= image_tag avatar_url_for(current_user), class: "rounded-full h-8 w-8 align-middle" %>
        <% end %>

        <%= link_to 'Account', edit_user_registration_path, class: 'inline-block text-sm px-4 py-2 leading-none rounded no-underline text-grey hover:text-grey-darker hover:bg-white mt-4 lg:mt-0' %>
        <%= link_to 'Admin', admin_root_path, class: 'inline-block text-sm px-4 py-2 leading-none rounded no-underline text-grey hover:text-grey-darker hover:bg-white mt-4 lg:mt-0' if current_user.admin? %>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'inline-block text-sm px-4 py-2 leading-none rounded no-underline text-grey hover:text-grey-darker hover:bg-white mt-4 lg:mt-0' %>
      <% else %>
        <%= link_to 'Log In', new_user_session_path, class: 'inline-block text-sm px-4 py-2 leading-none rounded no-underline text-grey hover:text-grey-darker hover:bg-white mt-4 lg:mt-0' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'inline-block text-sm px-4 py-2 leading-none border rounded no-underline text-grey border-grey hover:border-grey-darker hover:text-white hover:bg-grey-darker mt-4 lg:mt-0' %>
      <% end %>
    </div>
  </div>
</header>
